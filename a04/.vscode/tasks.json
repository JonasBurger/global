        {
            "label": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake --build build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "build/naive_pathtracer.algo",
                "configs/a04_box.json"
             ],
            "command": "./build/driver",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "make"
            ]
        },
        {
            "label": "run pots",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "build/naive_pathtracer.algo",
                "configs/a04_pots.json"
             ],
            "command": "./build/driver",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "make"
            ]
        },
        {
            "label": "run sibenik",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": [
                "build/brdf_imp.algo",
                "configs/a03_sibenik.json"
             ],
            "command": "./build/driver",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "make"
            ]
        },
        {
            "label": "build and run release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/release"
            },
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "..",
                "&&",
                "make",
                "&&",
                "./driver",
                "pathtracer.algo",
                "../configs/a04_box.json"
             ],
            "command": "cmake",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "make"
            ]
            
        },
        
    ]
